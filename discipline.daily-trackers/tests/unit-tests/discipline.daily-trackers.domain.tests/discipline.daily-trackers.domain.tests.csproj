    <ItemGroup>
      <ProjectReference Include="..\..\..\src\discipline.daily-trackers.domain\discipline.daily-trackers.domain\discipline.daily-trackers.domain.csproj" />
    </ItemGroup>

    <ItemGroup>
      <Compile Update="StageTests\CreateTests.DataSeed.cs">
